{
  "expo": {
    "name": "ExpoBoilerplate",
    "slug": "ExpoBoilerplate",
    "scheme": "expoboilerplate",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.expoboilerplate",
      "allowBackup": false,
      "googleServicesFile": "./google-services.json"
    },
    "ios": {
      "bundleIdentifier": "com.expoboilerplate",
      "appleTeamId": "",
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": false,
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification", "processing"],
        "BGTaskSchedulerPermittedIdentifiers": ["com.expoboilerplate"],
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "aps-environment": "production"
      }
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      // 'expo-build-properties' must be first. See https://github.com/invertase/react-native-firebase/issues/8657#issuecomment-3312082933
      [
        "expo-build-properties",
        {
          "ios": {
            // Helps RNFB to compile correctly on iOS, since firebase-ios-sdk requires use_frameworks
            // @see https://rnfirebase.io/#configure-react-native-firebase-modules
            "useFrameworks": "static",
            // RNFirebase iOS build fix using static linking (maintainer-recommended).
            "forceStaticLinking": ["RNFBApp", "RNFBMessaging"],
            "deploymentTarget": "16.0"
          },
          "android": {
            "minSdkVersion": 26,
            "compileSdkVersion": 34
          }
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/app-check",
      "@react-native-firebase/messaging",
      "expo-localization",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#000000",
          "enableBackgroundRemoteNotifications": true
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": ["Notifications"]
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "expo-boilerplate",
          "organization": "acme"
        }
      ],
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "tsconfigPaths": true
    }
  }
}
